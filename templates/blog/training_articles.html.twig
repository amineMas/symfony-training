{% extends 'base.html.twig' %}

{% block title %}Blog entraînement{% endblock %}

{% block stylesheets %}
  <style>
    .img-fluid {
      width: 700px;
      height: 300px;
    }
    hr {
      border-top: 2px solid rgba(0,0,0,.2);
    }
  </style>
{% endblock %}

{% block body %}

<div class="container py-5">

<h1 class="text-center mb-5"> Tout les articles sur l'entraînement </h1>


  {% for article in articles %}
<div class="row">
  <div class="col-md-8">
    <a href="{{ path('show_article', {'id':article.id}) }}">
      <img class="img-fluid rounded mb-3 mb-md-0"  src="{{ asset('uploads/' ~ article.image) }}" alt="">
    </a>
  </div>
  <div class="col-md-4">
    <h2>{{ article.title }}</h2>
    <p>{{ article.description | slice(0,200) }}</p>
    <a class="btn btn-danger" href="{{ path('show_article', {'id':article.id}) }}">Lire l'article</a>
  </div>
</div>
  <hr>
  {% endfor %}


  

</div>   

{% endblock %}