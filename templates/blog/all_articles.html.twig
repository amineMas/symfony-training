{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

    
<h1> Cette page présente tout les articles catégorie exercices ,  nutrition et idées reçues </h1>
  <div class="count">
    {{ pagination.getTotalItemCount }}
  </div>
<div class="row">
  {% for article in pagination %}
    <div class="col-4 mb-4">
    <div class="card" style="width: 18rem;">
      <img src="{{ article.image }}" class="card-img-top w-100" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{ article.title }}</h5>
        <p class="card-text">{{ article.description | slice(0,20) }}</p>
        <a href="{{ path('show_article', {'id':article.id}) }}" class="btn btn-primary">Lire la suite ...</a>
      </div>
    </div>
    </div>
  {% endfor %}
</div>
<div class="row justify-content-center">
  {{ knp_pagination_render(pagination) }} 

</div>

{% endblock %}
