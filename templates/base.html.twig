<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{% block title %}Choose Your Body{% endblock %}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="icon" href="{{ asset('images/logo-mobile.png') }}">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="{{ asset ('css/style.css') }}">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.css" />
  {% block stylesheets %}
  <style>
  
  footer.page-footer
  {
    font-family: Helvetica, sans-serif;
  }
  </style>
  {% endblock %}
</head>

{% for message in app.flashes('notice') %}
    <div class="alert alert-success" role="alert">
        {{ message }}
    </div>
{% endfor %}
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-black">
  <a class="navbar-brand" href="{{ path('home') }}">
    <img src="{{ asset('images/logo-desktop.png') }}" width="140" height="80" alt="logo" class="desktop">
    <img src="{{ asset('images/logo-mobile.png') }}"  width="100" height="70" alt="logo-mobile" class="mobile">
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse justify-content-end flex-grow-1" id="navbarNavDropdown">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('home') }}">Accueil</a>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="{{ path('training_programs') }}" id="navbarDropdownMenuLink" aria-haspopup="true" aria-expanded="false">
          Programmes
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <a class="dropdown-item" href="{{ path('weight_loss') }}">Perte de poids</a>
          <a class="dropdown-item" href="{{ path('muscle_gain') }}">Prise de masse</a>
          <a class="dropdown-item" href="{{ path('keep_fit') }}">Rester en forme</a>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="{{ path('blog_list') }}" id="navbarDropdownMenuLink"  aria-haspopup="true" aria-expanded="false">
          Blog
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <a class="dropdown-item" href="{{ path('training_articles') }}">Entraînement</a>
          <a class="dropdown-item" href="{{ path('diet_articles') }}">Nutrition</a>
          <a class="dropdown-item" href="{{ path('stereotypes_articles') }}">Idées reçues</a>
        </div>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('about') }}">A propos</a>
      </li>

      {% if not is_granted('IS_AUTHENTICATED_FULLY') %}

      <li class="nav-item">
        <a class="nav-link" href="{{ path('registration') }}">S'inscrire</a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="{{ path('login') }}">Se connecter</a>
      </li>

      {% else %}

      <li class="nav-item">
        <a class="nav-link" href="{{ path('profile') }}">Profil</a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="{{ path('logout') }}">Se déconnecter</a>
      </li>
      {% endif %}

      {% if is_granted('ROLE_ADMIN') %}
      <li>
        <a class="nav-link" href="{{ path('admin_home') }}"> Aller sur le back-office </a>
      </li>
      {% endif %}
    </ul>
  </div>
</nav>


{% block body %}{% endblock %}

