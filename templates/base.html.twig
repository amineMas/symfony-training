<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{% block title %}Choose Your Body{% endblock %}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="{{ asset ('css/style.css') }}"
  {% block stylesheets %}{% endblock %}
</head>


<body>
<div class="container">
<nav class="navbar navbar-expand-lg navbar-dark p-3" style="background-color:#e53935;">
  <a class="navbar-brand" href="#">Navbar</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('home') }}">Accueil</a>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="{{ path('training_programs') }}" id="navbarDropdownMenuLink" aria-haspopup="true" aria-expanded="false">
          Programmes
        </a>
        <div class="dropdown-menu red-darken-3" aria-labelledby="navbarDropdownMenuLink">
          <a class="dropdown-item" href="{{ path('weight_loss') }}">Perte de poids</a>
          <a class="dropdown-item" href="{{ path('muscle_gain') }}">Prise de masse</a>
          <a class="dropdown-item" href="{{ path('keep_fit') }}">Rester en forme</a>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="{{ path('blog_list') }}" id="navbarDropdownMenuLink"  aria-haspopup="true" aria-expanded="false">
          Blog
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <a class="dropdown-item" href="{{ path('training_articles') }}">Entraînement</a>
          <a class="dropdown-item" href="{{ path('diet_articles') }}">Nutrition</a>
          <a class="dropdown-item" href="{{ path('stereotypes_articles') }}">Idées reçues</a>
        </div>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('about') }}">A propos</a>
      </li>

      {% if not is_granted('IS_AUTHENTICATED_FULLY') %}

      <li class="nav-item">
        <a class="nav-link" href="{{ path('registration') }}">S'inscrire</a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="{{ path('login') }}">Se connecter</a>
      </li>

      {% else %}

      <li class="nav-item">
        <a class="nav-link" href="{{ path('profile') }}">Profil</a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="{{ path('logout') }}">Se déconnecter</a>
      </li>
      {% endif %}

      {% if is_granted('ROLE_ADMIN') %}
      <li>
        <a class="nav-link" href="{{ path('admin_home') }}"> Aller sur le back-office </a>
      </li>
      {% endif %}
    </ul>
  </div>
</nav>
</div>

<div class="container mb-5">
{% block body %}{% endblock %}
</div> 

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script src="{{ asset('js/base.js') }}"></script>


{% block javascripts %}{% endblock %}
</body>
</html>
