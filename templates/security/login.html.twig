<form method="post" action="{{ path('login_check') }}">
    <div class="row mt-5">

        <div class="col-5">
            <label for="pseudo">Pseudo</label>
            <input type="text" placeholder ="Pseudo" name="_username" value="{{ last_username }}" id="pseudo">
        </div>

        <div class="col-5">
            <label for="mdp">Mot de passe</label>
            <input type="password" placeholder="Mot de passe" name="_password" id="mdp">
        </div>

        <div class="col-2">
            <input type="submit" class="btn btn-success" value="Se connecter">
        </div>
    </div>
</form>

</div>

{% endblock %}