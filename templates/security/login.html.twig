{% extends 'base.html.twig' %}

{% block body %}

<div class="container" style="min-height:600px;">

<h1 class="mt-5"> Connexion </h1>
{# 5 imp√©ratifs :
    1/ method = post
    2/ action = "login_check"
    3/ name ="_username"
    4/ name ="_password"
    5/ value ="lastUsername"

