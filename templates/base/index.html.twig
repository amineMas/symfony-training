<div class="container">
  <!-- deux dernier article -->
  {# {{ dump(latestArticles[1]) }} #}
{% for key, article in latestArticles %}

  {% if key is even %} 
  <div class="row featurette">
      <div class="col-md-7">
        <p class="featurette-heading">{{ article.title }}</p>
        <p class="lead"> {{ article.description | slice(0,250) }}</p>
      </div>
      <div class="col-md-5">
        <a href="{{ path('show_article', {'id':article.id}) }}">
          <img src="{{ asset('uploads/' ~ article.image) }}" alt="" class="mw-100">
        </a>
      </div>
  </div>
    <hr class="featurette-divider">
  
  {% else %}
  <div class="row featurette">
      <div class="col-md-7 order-md-2">
        <p class="featurette-heading">{{ article.title }}</p>
        <p class="lead"> {{ article.description | slice(0,250) }}</p>
      </div>
      <div class="col-md-5 order-md-1">
        <a href="{{ path('show_article', {'id':article.id}) }}">
          <img src="{{ asset('uploads/' ~ article.image) }}" alt="" class="mw-100">
        </a>
      </div>
    </div>
    <hr class="featurette-divider">
    {% endif %}
{% endfor %}
