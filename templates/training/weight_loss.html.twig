{% extends 'base.html.twig' %}

{% block title %} Objectif perte de poids {% endblock %}

{% block body %}

<h1>Cette page affiche les programmes de perte de poids.</h1>

<div class="container">

<div class="row">
{% for train in trainings %}

<div class="card col-4 mb-4 ml-4" style="width: 25rem;">
    <img class="card-img-top" src="{{ asset('uploads/' ~ train.image) }}" alt="Card image cap">
    <div class="card-body">
        <h4 class="card-title">{{ train.name }}</h4>
        <p class="card-text">{{ train.description |slice(0,30) }}...</p>
        <a href="{{ path('purchase' , {'idTraining' : train.id} ) }}" class="btn btn-primary">S'abonner</a>
    </div>
</div>

{% endfor %}
</div>
</div>
{% endblock %}
